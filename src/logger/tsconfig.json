{
    "compilerOptions": {
        "outDir": "lib",
        "baseUrl": "./src",
        "target": "ES2019",
        "lib": [
          "ES2019"
        ],
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noUnusedLocals": true,
        "declaration": true,
        "sourceMap": true
      },
      "exclude": [
        "node_modules"
      ],
      "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx"
      ]
}
